---
const { title } = Astro.props;
---
<div class="card-background-base bg-base-100 rounded-box">
  <div class="mockup-browser cute-card border-2 border-base-content bg-primary/30 w-full">
    <div class="mockup-browser-toolbar cute-card-toolbar">
      <div class="font-bold">{title}</div>
    </div>
    <div class="cute-card-body p-3 border-t-2 border-base-content bg-base-100 text-base">
      <slot />
    </div>
  </div>
</div>
<style>
  .cute-card-body {
    line-height: 1.3;
    font-size: 0.875rem /* 14px */;
  }
  .card-background-base{
    filter: 
        drop-shadow(1px 1px color-mix(in oklab, var(--color-base-content) 50%, var(--color-base-300))) 
        drop-shadow(2px 0 color-mix(in oklab, var(--color-base-content) 50%, var(--color-base-300)));
  }
</style>