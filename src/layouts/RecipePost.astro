---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';

type Props = CollectionEntry<'recipes'>['data'];

const { title, description, pubDate, heroImage } = Astro.props;
---
<!doctype html>
<html lang="en" data-theme="retro">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin-inline: auto;
        margin-block: 0;
        padding: 1em;
        height: 100%;
        container-type: inline-size;
			}
			.prose {
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
      @container (width > 700px) {
        .prose {
          width: 720px;
        }
      }
      @media (max-width: 720px) {
        main {
          width: 100%;
          padding: 0.5em 0;
        }
      }
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h2 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
			}
		</style>
	</head>

	<body class="max-w-10xl">
		<Header />
    <div class="grid md:grid-cols-[16rem_auto]">
      <Sidebar />

      <main>
        <article>
          <div class="prose prose-sm bg-base-100 p-4 rounded-box border-2">
            <div class="title text-base">
              <div class="date">
                <FormattedDate date={pubDate} />
              </div>
              <h2>{title}</h2>
              <div class="divider divider-secondary mx-20"></div>
            </div>
            <slot />
          </div>
        </article>
		  </main>
    </div>
		<Footer />
	</body>
</html>
